{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@sei-code/*": ["./packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/wallets" },
    { "path": "./packages/precompiles" },
    { "path": "./packages/transactions" },
    { "path": "./packages/nft" },
    { "path": "./packages/analytics" },
    { "path": "./packages/social" },
    { "path": "./packages/models" },
    { "path": "./packages/x402" },
    { "path": "./packages/seiai-cli" }
  ],
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist"
  ]
}