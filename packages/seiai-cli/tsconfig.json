{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "templates", "examples"],
  "references": [
    { "path": "../core" },
    { "path": "../wallets" },
    { "path": "../precompiles" },
    { "path": "../transactions" },
    { "path": "../nft" },
    { "path": "../analytics" },
    { "path": "../social" },
    { "path": "../models" },
    { "path": "../x402" },
    { "path": "../governance" }
  ]
}